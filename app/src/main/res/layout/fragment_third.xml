<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#f2f2f2"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
            android:text="Settings"
            android:textColor="#111"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardBackgroundColor="#f2f2f2"
            app:cardCornerRadius="5dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f2f2f2"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:drawableTint="#111"
                android:ems="10"
                android:hint=" search"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:shadowDx="7"
                android:shadowDy="8"
                android:shadowRadius="5"
                android:textColor="#111"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_wb_sunny_24"
                    android:paddingLeft="10dp"
                    android:text=" Dark Mode"
                    android:textColor="#111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_notifications_24"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:paddingLeft="10dp"
                    android:text=" Notification"
                    android:textColor="#111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:paddingLeft="10dp"
                    android:text=" Appearance"
                    android:textColor="#111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:paddingLeft="10dp"
                    android:text=" Privacy &amp; Security"
                    android:textColor="#111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_phone_enabled_24"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:paddingLeft="10dp"
                    android:text=" Help &amp; Security"
                    android:textColor="#111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_language_24"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:paddingLeft="10dp"
                    android:text=" Language "
                    android:textColor="#111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:paddingLeft="10dp"
                    android:text=" Account"
                    android:textColor="#111"
                    android:textSize="18sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>